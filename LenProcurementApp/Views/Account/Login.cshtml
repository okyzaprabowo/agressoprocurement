                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-white" })
                    <h1 style="color:#fff;">Login</h1>
                    <div id="groupField">
                        <fieldset id="inputs">
                            <input data-val="true" data-val-required="User name harus terisi" id="username" name="UserName" placeholder="Username" type="text" value="" required />
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            <input data-val="true" data-val-required="Password harus terisi" id="password" name="Password" placeholder="Password" type="password" required />
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </fieldset>
                        <fieldset id="actions">
                            <input type="submit" id="submit" value="Log in" class="btn btn-primary" onclick="go()" />
                        </fieldset>
                    </div>
