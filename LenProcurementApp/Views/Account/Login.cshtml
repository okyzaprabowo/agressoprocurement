            background: -webkit-linear-gradient(left, #0079c3 0%,#004087 54%);
            background: -o-linear-gradient(left, #0079c3 0%,#004087 54%);
            background: -ms-linear-gradient(left, #0079c3 0%,#004087 54%);
            background: linear-gradient(to right, #0079c3 0%,#004087 54%);
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#0079c3', endColorstr='#004087',GradientType=1 );
        }

        fieldset {
            border: 0 none;
            margin: 0;
            padding: 0;
        }

        #groupField {
            width: 350px;
        }

        #inputs input {
            border: 1px solid #ccc;
            border-radius: 5px;
            margin: 0 0 10px;
            padding: 10px 10px 10px 15px;
            width: 350px;
        }

        #username {
            background-position: 5px -2px !important;
        }

        #password {
            background-position: 5px -52px !important;
        }

        #actions input {
            width: 350px;
        }

        #formLogin {
            float: right;
            padding-top: 8%;
            padding-right: 12%;
        }

        .col-md-12, .col-md-8 {
            min-height: 1px;
            padding-left: 1px;
            position: relative;
        }

        #back {
            background: url(@System.Configuration.ConfigurationManager.AppSettings["BaseUrl"]Assets/img/LenLogin2.png) no-repeat;
            background-size: contain;
            height: 100%;
            width: 100%;
        }

        .validation-summary-errors {
            min-width: 350px;
        }

        .judulAplikasi {
            font-size: 60px;
            text-align: right;
            color: #fff;
            margin-top: 2%;
            margin-right: 2%;
            padding-left: 6%;
            text-shadow: 1px 0px 1px #ccc, 0px 1px 1px #494848, 2px 1px 1px #ccc, 1px 2px 1px #494848;
        }
        html {
            height:100%;
        }
        body {
            height:100%;

        }
        .row {
            height:100%;
        }
        .text-white {
           color:white;
        }
    </style>

    <style type="text/css" media="screen and (max-width:720px)">
        #back {
            background: none;
        }

        .judulAplikasi {
            font-size: 40px;
        }
    </style>
</head>
<body>
    <!-- Loader -->
    <div class="preload-wrapper"><div id="preloader_1"><span></span><span></span><span></span><span></span><span></span></div></div>
    <div class="row">
        <div class="col-md-12" id="back">
            <h1 class="judulAplikasi">Aplikasi Monitoring Pengadaan</h1>
            <div id="formLogin">
